
@{
    ViewBag.Title = "補發密碼";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ForgetPassword", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2"> 請輸入您的登入帳號</label>
            <div class="col-md-10">
                <input name="id" id="id" type="text" required="required" class="form-control" maxlength="255" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> 請輸入您的電子信箱</label>
            <div class="col-md-10">
                <input name="email" id="email" type="email" required="required" class="form-control" maxlength="255" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

