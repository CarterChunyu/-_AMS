                            if (typeof totale['Totale'][index2] == 'undefined') { totale['Totale'][index2] = 0; }

                            //valore = Number(val2.replace('€', "").replace('.', "").replace(',', "."));
                            if (index2 > 4) {
                                //var s = s.replace(/\你要置換的字串/g, 'AA');
                                var s = val2.replace(/\,/g, '');
                                valore = Number(s);
